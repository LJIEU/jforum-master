<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- namespace等于mapper接口类的全限定名,这样实现对应 -->
<mapper namespace="com.liu.db.mapper.SysMenuMapper">
    <resultMap id="SysMenuMapperResult" type="com.liu.db.entity.SysMenu">
        <result property="menuId" column="menu_id"/>
        <result property="menuName" column="menu_name"/>
        <result property="parentId" column="parent_id"/>
        <result property="orderNum" column="order_num"/>
        <result property="path" column="path"/>
        <result property="component" column="component"/>
        <result property="query" column="query"/>
        <result property="isCache" column="is_cache"/>
        <result property="menuType" column="menu_type"/>
        <result property="visible" column="visible"/>
        <result property="status" column="status"/>
        <result property="perms" column="perms"/>
        <result property="icon" column="icon"/>
        <result property="isDelete" column="is_delete"/>
        <result property="createBy" column="create_by"/>
        <result property="createTime" column="create_time"/>
        <result property="updateBy" column="update_by"/>
        <result property="updateTime" column="update_time"/>
        <result property="remark" column="remark"/>
    </resultMap>

    <sql id="selectSysMenuVo">
        select *
        from sys_menu
    </sql>
    <insert id="insert" parameterType="com.liu.db.entity.SysMenu">
        insert into sys_menu
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="menuId != null">
                menu_id,
            </if>
            <if test="menuName != null and menuName.length() > 0">
                menu_name,
            </if>
            <if test="parentId != null">
                parent_id,
            </if>
            <if test="orderNum != null">
                order_num,
            </if>
            <if test="path != null and path.length() > 0">
                path,
            </if>
            <if test="component != null and component.length() > 0">
                component,
            </if>
            <if test="query != null and query.length() > 0">
                query,
            </if>
            <if test="isCache != null">
                is_cache,
            </if>
            <if test="menuType != null and menuType.length() > 0">
                menu_type,
            </if>
            <if test="visible != null and visible.length() > 0">
                visible,
            </if>
            <if test="status != null and status.length() > 0">
                status,
            </if>
            <if test="perms != null and perms.length() > 0">
                perms,
            </if>
            <if test="icon != null and icon.length() > 0">
                icon,
            </if>
            <if test="isDelete != null and isDelete.length() > 0">
                is_delete,
            </if>
            <if test="createBy != null and createBy.length() > 0">
                create_by,
            </if>
            <if test="remark != null and remark.length() > 0">
                remark,
            </if>
            create_time
        </trim>
        values
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="menuId != null">
                #{menuId},
            </if>
            <if test="menuName != null and menuName.length() > 0">
                #{menuName},
            </if>
            <if test="parentId != null">
                #{parentId},
            </if>
            <if test="orderNum != null">
                #{orderNum},
            </if>
            <if test="path != null and path.length() > 0">
                #{path},
            </if>
            <if test="component != null and component.length() > 0">
                #{component},
            </if>
            <if test="query != null and query.length() > 0">
                #{query},
            </if>
            <if test="isCache != null">
                #{isCache},
            </if>
            <if test="menuType != null and menuType.length() > 0">
                #{menuType},
            </if>
            <if test="visible != null and visible.length() > 0">
                #{visible},
            </if>
            <if test="status != null and status.length() > 0">
                #{status},
            </if>
            <if test="perms != null and perms.length() > 0">
                #{perms},
            </if>
            <if test="icon != null and icon.length() > 0">
                #{icon},
            </if>
            <if test="isDelete != null and isDelete.length() > 0">
                #{isDelete},
            </if>
            <if test="createBy != null and createBy.length() > 0">
                #{createBy},
            </if>
            <if test="remark != null and remark.length() > 0">
                #{remark},
            </if>
            sysdate()
        </trim>
    </insert>
    <update id="update" parameterType="com.liu.db.entity.SysMenu">
        update sys_menu
        <trim prefix="set" suffixOverrides=",">
            <if test="menuName != null and menuName.length() > 0">
                menu_name = #{menuName},
            </if>
            <if test="parentId != null">
                parent_id = #{parentId},
            </if>
            <if test="orderNum != null">
                order_num = #{orderNum},
            </if>
            <if test="path != null and path.length() > 0">
                path = #{path},
            </if>
            <if test="component != null and component.length() > 0">
                component = #{component},
            </if>
            <if test="query != null and query.length() > 0">
                query = #{query},
            </if>
            <if test="isCache != null">
                is_cache = #{isCache},
            </if>
            <if test="menuType != null and menuType.length() > 0">
                menu_type = #{menuType},
            </if>
            <if test="visible != null and visible.length() > 0">
                visible = #{visible},
            </if>
            <if test="status != null and status.length() > 0">
                status = #{status},
            </if>
            <if test="perms != null and perms.length() > 0">
                perms = #{perms},
            </if>
            <if test="icon != null and icon.length() > 0">
                icon = #{icon},
            </if>
            <if test="updateBy != null and updateBy.length() > 0">
                update_by = #{updateBy},
            </if>
            <if test="remark != null and remark.length() > 0">
                remark = #{remark},
            </if>
            update_time = sysdate(),
        </trim>
        where menu_id = #{menuId}
    </update>

    <delete id="deleteById" parameterType="String">
        update sys_menu
        set is_delete = 1
        where menu_id = #{menuId};
    </delete>

    <select id="selectSysMenuList" parameterType="com.liu.db.entity.SysMenu"
            resultMap="SysMenuMapperResult">
        <include refid="selectSysMenuVo"/>
        <where>
            <if test="menuName != null and menuName.length() > 0">
                <bind name="menuName" value="'%'+menuName + '%'"/>
                and menu_name like #{menuName}
            </if>
            and is_delete = '0'
        </where>
    </select>
    <select id="selectSysMenuByMenuId" resultType="com.liu.db.entity.SysMenu">
        <include refid="selectSysMenuVo"/>
        <where>
            menu_id = #{menuId}
            and is_delete = 0
        </where>
    </select>
    <select id="getItem" resultType="com.liu.db.entity.SysMenu">
        <include refid="selectSysMenuVo"/>
        <where>
            menu_name = #{menuName} and is_delete = 0
        </where>
    </select>
</mapper>