<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- namespace等于mapper接口类的全限定名,这样实现对应 -->
<mapper namespace="com.liu.db.mapper.relation.PostAndTagMapper">

    <insert id="insert">
        insert into `post_tag`(post_id, tag_id)
        values (#{postId}, #{tagId})
    </insert>
    <delete id="delete">
        delete
        from `post_tag`
        where post_id = #{postId};
    </delete>
    <select id="selectTagsByPostId" resultType="java.lang.String">
        select `tag_id`
        from `post_tag`
        where post_id = #{postId}
    </select>
</mapper>