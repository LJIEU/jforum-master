<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- namespace等于mapper接口类的全限定名,这样实现对应 -->
<mapper namespace="com.liu.system.mapper.relation.SysUserAndRoleMapper">
    <resultMap id="SysRoleMapperResult" type="com.liu.system.dao.SysRole">
        <result property="roleId" column="role_id"/>
        <result property="roleName" column="role_name"/>
        <result property="roleKey" column="role_key"/>
        <result property="roleSort" column="role_sort"/>
        <result property="dataScope" column="data_scope"/>
        <result property="menuCheckStrictly" column="menu_check_strictly"/>
        <result property="deptCheckStrictly" column="dept_check_strictly"/>
        <result property="status" column="status"/>
        <result property="isDelete" column="is_delete"/>
        <result property="createBy" column="create_by"/>
        <result property="createTime" column="create_time"/>
        <result property="updateBy" column="update_by"/>
        <result property="updateTime" column="update_time"/>
        <result property="remark" column="remark"/>
    </resultMap>
    <insert id="add">
        insert into sys_user_role(`user_id`, `role_id`) value (#{userId}, #{roleId})
    </insert>
    <update id="update">
        update sys_user_role
        set role_id = #{newRoleId}
        where user_id = #{userId}
          and role_id = #{oldRoleId};
    </update>
    <delete id="delete">
        delete
        from sys_user_role
        where user_id = #{userId}
          and role_id = #{roleId}
    </delete>

    <select id="getRoleByUserId" resultMap="SysRoleMapperResult">
        SELECT r.role_id,
               r.role_name,
               r.role_key,
               r.role_sort,
               r.data_scope,
               r.menu_check_strictly,
               r.dept_check_strictly,
               r.`status`,
               r.create_by,
               r.create_time,
               r.update_by,
               r.update_time,
               r.remark
        FROM sys_role AS r
                 LEFT JOIN sys_user_role AS ur ON r.role_id = ur.role_id
        WHERE ur.user_id = 1
          AND r.is_delete = '0';
    </select>
</mapper>